<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_blockade_number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#D8FCC9">

    <ImageView
        android:id="@+id/iv_process_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_process_name"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_process_icon"
        android:text="process name"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_process_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_process_name"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@id/iv_process_icon"
        android:text="process memory"
        android:textColor="#88000000"
        android:textSize="16sp" />
    
    <CheckBox 
        android:id="@+id/cb_checked"
        android:focusable="false"
        android:clickable="false"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dip"
        android:gravity="center_vertical"
        />

</RelativeLayout>